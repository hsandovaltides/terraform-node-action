{
  "name": "terraform-node-action",
  "version": "1.0.0",
  "description": "Esta acci√≥n imprime \"Hello World\" o \"Hello\" + el nombre de una persona a quien saludar en el registro.",
  "main": "index.js",
  "scripts": {
    "test": "cd wrapper && npm test && cd .. && semistandard --env jest && jest --coverage",
    "lint": "cd wrapper && npm run lint && cd .. && semistandard --env jest --fix",
    "build": "cd wrapper && npm run build && cd .. && ncc build index.js --out dist",
    "postinstall": "cd wrapper && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsandovaltides/terraform-node-action.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hsandovaltides/terraform-node-action/issues"
  },
  "homepage": "https://github.com/hsandovaltides/terraform-node-action#readme",
  "dependencies": {
    "@actions/core": "^1.1.0",
    "@actions/github": "^1.1.0",
    "@actions/io": "^1.1.0",
    "@actions/tool-cache": "^1.6.1",
    "@hashicorp/js-releases": "^1.2.1",
    "@types/semver": "^7.3.4"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.25.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "semistandard": "^16.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/wrapper/"
    ]
  },
  "semistandard": {
    "ignore": [
      "dist/**",
      "wrapper/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/"
    }
  }
}
